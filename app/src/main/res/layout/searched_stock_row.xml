<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="1dp"
    android:elevation="120dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    android:clickable="true"
    android:focusable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="408dp"
        android:layout_height="58dp"

        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="@dimen/query_row_padding_side"
        android:paddingTop="@dimen/query_row_padding"
        android:paddingRight="@dimen/query_row_padding_side"
        android:paddingBottom="@dimen/query_row_padding">

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="403dp"
            android:layout_height="49dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-2dp">

            <TextView
                android:id="@+id/stock_symbol"
                android:layout_width="381dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/symbol_filler"
                android:textAlignment="textStart"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/company_name"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="29dp"
                android:fontFamily="sans-serif"
                android:text="@string/company_name_filler"
                android:textAlignment="textStart"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="normal" />

        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
